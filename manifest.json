{
  "manifest_version": 3,
  "name": "Danbooru Tag Copier",
  "version": "1.0",
  "description": "Danbooruの投稿ページでコンテキストメニューから全てのタグをクリップボードにコピーします。",
  "permissions": [
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://danbooru.donmai.us/posts/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}